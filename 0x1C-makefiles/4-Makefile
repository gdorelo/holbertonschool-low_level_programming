CC = gcc
SRC = holberton.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
RM = rm -rf
CFLAGS = -Wall -Werror -Wextra -pedantic
%.o: %.c m.h
	$(CC) $(CFLAGS) -c -o $@ $<
all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ *.swp $(NAME)
oclean:
	$(RM) $(OBJ)
fclean:	clean oclean
re: oclean all
